$orangeTextColor: rgb(255,102,0);
$interactiveColor: #4a5056;

.slides section {

    h1, h2, h3 {
        text-transform: lowercase;
        line-height: 1.4;
        letter-spacing: 2px;
        word-spacing: 0.1em;
        color: $orangeTextColor;
    }

    p, ol, ul {
        line-height: 1.4;
    }

    a {
        color: $orangeTextColor;
        // font-weight: bold;

        &hover {
            color: lighten( $orangeTextColor, 15% );
            text-decoration: underline;
        }
    }
}
